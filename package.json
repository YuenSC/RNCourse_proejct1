{
  "name": "rncourse",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint --ext .tsx --ext .ts ./",
    "format": "npx prettier --write ./ && prettier --check ./",
    "prepare": "husky install"
  },
  "dependencies": {
    "expo": "~46.0.9",
    "expo-linear-gradient": "~11.4.0",
    "expo-status-bar": "~1.4.0",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-native": "0.69.5",
    "react-native-web": "~0.18.7"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@types/react": "~18.0.14",
    "@types/react-native": "~0.69.1",
    "eslint": "^8.23.1",
    "eslint-config-universe": "^11.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "~4.3.5"
  },
  "private": true,
  "eslintConfig": {
    "extends": "universe"
  },
  "lint-staged": {
    "./**/*.{ts,tsx}": [
      "yarn lint"
    ],
    "./**": [
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
